generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Models

model UserSettings {
  userId   String @id @map("_id") // Clerk's user ID can be used as a string
  currency String
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  name      String
  userId    String
  icon      String
  type      String   @default("income")

  @@unique([name, userId, type])
  @@index([userId])
}

model Transaction {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  amount      Float
  description String
  date        DateTime
  userId      String
  type        String   @default("income")

  category     String
  categoryIcon String

  @@index([userId, date])
}

model MonthHistory {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  userId  String
  day     Int
  month   Int
  year    Int
  income  Float
  expense Float

  @@unique([day, month, year, userId])
  @@index([userId])
}

model YearHistory {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  userId  String
  month   Int
  year    Int
  income  Float
  expense Float

  @@unique([month, year, userId])
  @@index([userId])
}
